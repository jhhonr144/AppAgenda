<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".alarma">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar Producto"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinnerCliente2"
            android:layout_width="match_parent"
            android:layout_height="37dp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar Cliente"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinnerProduc2"
            android:layout_width="match_parent"
            android:layout_height="37dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/pagar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total a Pagar :"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/debe2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Debe :"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/abono2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Abono"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recordatorio Plazo de Pago"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button29"
                android:layout_width="178dp"
                android:layout_height="wrap_content"
                android:text="seleccione la hora" />

            <EditText
                android:id="@+id/editText24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="hora"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button28"
                android:layout_width="178dp"
                android:layout_height="wrap_content"
                android:text="seleccione la fecha" />

            <EditText
                android:id="@+id/editText23"
                android:layout_width="227dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="fecha"
                android:inputType="textPersonName" />
        </LinearLayout>

        <EditText
            android:id="@+id/editText21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Titulo"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editText22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="mensaje"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/button30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="llenar111"
            android:text="guardar" />

        <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:visibility="invisible" />

        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:visibility="invisible" />
    </LinearLayout>

</RelativeLayout>